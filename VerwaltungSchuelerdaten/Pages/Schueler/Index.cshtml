@page
@model VerwaltungSchuelerdaten.Pages.Schueler.IndexModel

@{
  ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form>
  <p>
    Suche: <input type="text" asp-for="Suche" />
    <br />
    Konfession:
    <select asp-for="SucheKonfession" asp-items="Model.Konfessionen">
      <option value="">Alle</option>
      <option value="Keine Religionszugehörigkeit">Keine Religionszugehörigkeit
      </option>
    </select>
    <input type="submit" value="Filtern" />
    <br />
  </p>
</form>

<p>
  <a asp-page="Create">Create New</a>
</p>
<table class="table">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.SchuelerDaten[0].Vorname)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.SchuelerDaten[0].Nachname)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.SchuelerDaten[0].Geburtsdatum)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.SchuelerDaten[0].EMail)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.SchuelerDaten[0].Telefonnummer)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.SchuelerDaten[0].Konfession)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.SchuelerDaten[0].Staatsangehoerigkeit)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.SchuelerDaten[0].ZweiteStaatsangehoerigkeit)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.SchuelerDaten[0].Anmeldedatum)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.SchuelerDaten[0].Kommentar)
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model.SchuelerDaten)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Vorname)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Nachname)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Geburtsdatum)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.EMail)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Telefonnummer)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Konfession)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Staatsangehoerigkeit)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.ZweiteStaatsangehoerigkeit)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Anmeldedatum)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Kommentar)
        </td>
        <td>
          <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
          <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
          <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>
