@page
@model IndexModel
@{
  ViewData["Title"] = "Startseite";
}

<div class="text-center">
  <h1 class="display-4">Wilkommen!</h1>

  @*<a asp-page="Schueler/Create"> Schuelerdaten erfassen </a>
    <br/>
    <a asp-page="Schueler/Details" asp-route-id="1">Details für Schüler 1</a> |*@

  <table class="table">
    <thead>
      <tr>
        <th>
          @Html.DisplayNameFor(model => model.SchuelerDaten[0].ID)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.SchuelerDaten[0].Vorname)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.SchuelerDaten[0].Nachname)
        </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in Model.SchuelerDaten)
      {
        <tr>
          <td>
            @Html.DisplayFor(modelItem => item.ID)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Vorname)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Nachname)
          </td>
          <td>
            <a asp-page="Schueler/Details" asp-route-id="@item.ID">Details</a> 
          </td>
        </tr>
      }
    </tbody>
  </table>



</div>
